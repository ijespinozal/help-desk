{
  "name": "help-desk",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-help-desk": "cds watch --open com.project.helpdesk/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy help-desk --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "[hybrid]": { "kind": "hana" },
        "[production]": { "kind": "hana" }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "alice": {
            "password": "admin",
            "roles": ["Support", "Admin"]
          },
          "carol": {
            "password": "user",
            "roles": ["User"]
          }
        },
        "[production]": {
          "kind": "xsuaa" 
        }
      },
      "sap_api_ias": {
        "kind": "rest",
        "credentials": {
          "destination": "SAP_API_IAS",
          "path": "/scim",
          "requestTimeout": 30000
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/help-desk"
  ]
}
